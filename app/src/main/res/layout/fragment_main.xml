<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <na.komi.kodesh.ui.widget.LayoutedTextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_periscope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:bufferType="spannable"
        android:clipChildren="false"
        android:gravity="center"
        android:clipToPadding="true"
        android:focusable="true"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.17"
        android:paddingLeft="24dp"
        android:visibility="gone"
        android:paddingRight="24dp"
        android:soundEffectsEnabled="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        tools:text="In the beginning" />

    <na.komi.kodesh.ui.widget.ViewPager3
    android:id="@+id/pager_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:listitem="@layout/recyclerview_child"/>
</LinearLayout>